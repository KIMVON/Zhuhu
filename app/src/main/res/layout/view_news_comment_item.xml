<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tool="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="8dp"
              android:background="@drawable/popupwindow_background"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_header_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tool:background="#000"
        />


    <!--右边部分-->
    <LinearLayout
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >

        <!--用户姓名与文章的点赞数目-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--姓名-->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="Boss"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                />


            <!--点赞数目-->
            <TextView
                android:id="@+id/support_count"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="31"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <!--点赞图标-->
            <ImageView

                android:layout_toLeftOf="@id/support_count"
                android:id="@+id/support_logo"
                android:layout_width="30dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_black_support32"
                />
        </RelativeLayout>


        <!--正文-->
        <TextView
            android:id="@+id/comment_content"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text=""
            android:textSize="16sp"
            android:textColor="#000"
            />

        <!--日期-->
        <TextView
            android:id="@+id/comment_time"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="2017/4/10"
            android:textColor="#000"
            />


    </LinearLayout>
</LinearLayout>